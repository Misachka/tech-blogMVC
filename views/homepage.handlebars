<div>
{{#each blogPosts as |blogPost|}}

  <div class="row">

    <div class="container blogBox">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <!-- homepage dispay, always show blog title in uppercase -->
          <a class="blogTitle text-uppercase" href="/blog/{{blogPost.id}}">{{blogPost.title}}</a>
        </h2>
      </div>
<!-- Display the author and creation date of the blog post -->
      <div class="col-4">
        <p class="blogCreate text-right">Created by
          {{blogPost.user.name}}
          on
          {{format_date blogPost.date_created}}
        </p>
      </div>
			</div>
    <div class="blogDesc">
      <p class="text-center blogDescMain">
        {{blogPost.description}}
      </p>
    </div>
    </div>

  </div>

{{/each}}
 {{#if logged_in}}

<form class="new-comment-form formCont d-flex flex-wrap justify-content-space-between" data-blog_Post_id={{blogPost.id}}>
    <div class="textAreaCont p-2">
        <!-- area for entering a new comment -->
        <textarea id='comment_description' name="comment-body"
        placeholder="Enter a comment here..."
        cols="30"
        rows="2"></textarea>
    </div>
    <div class="btnComment p-2">
        <!-- Button for submitting a new comment -->
        <button class="button btn btn-success" type="submit">Add Comment</button>
    </div>
    

{{/if}}

<!-- Display the header for the comments section -->
<h2 class="text-center">Comments</h2>

<!-- display each comment content and author/date information -->
{{#each blogPost.Comments as |comment|}}
<div class="commentCont">
    <p class="text-center commentText">{{comment.comment_description}}</p>
    <p class="text-center commentOwner">
        <span>~</span>Created by {{comment.user.name}} on {{format_date date_created}}<span>~</span>
    </p>
    

</div>
{{/each}}
</div>