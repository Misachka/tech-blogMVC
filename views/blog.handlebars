<div class="text">
    <div class="container blogBoxCont">
        <div class="row headerRow">
            <div class="col-8">
                <!-- Display the title -->
                <h2 class="blogTitle text-uppercase">{{blogPost.title}}</h2>
            </div>
            <div class="col-4">
                <!-- Display the author and creation date of the blog post -->
                <p class="blogCreate text-right">Created by {{blogPost.user.username}} on {{format_date blogPost.date_created}}</p>
            </div>
        </div>
        <!-- Display blog content -->
        <p class="text-center blogDescTwo">{{blogPost.description}}</p>
    </div>
</div>

<!-- Checks if a user is logged in -->
{{#if logged_in}}

<form class="new-comment-form formCont d-flex flex-wrap justify-content-center" data-blog_Post_id={{blogPost.id}}>
    <div class="textAreaCont p-2">
        <!-- area for entering a new comment -->
        <textarea id='comment_description' name="comment-body"
        placeholder="Enter a comment here..."
        cols="30"
        rows="2"></textarea>
    </div>
    <div class="btnComment p-2">
        <!-- Button for submitting a new comment -->
        <button class="button btn btn-success" type="submit">Add a Comment</button>
    </div>
    
{{/if}}

<!-- Display the header for the comments section -->
<h2 class="text-center">Comments</h2>

<!-- display each comment content and author/date information -->
{{#each blogPost.Comments as |comment|}}
<div class="commentCont">
    <p class="text-center commentText">{{comment.comment_description}}</p>
    <p class="text-center commentOwner">
        <span>~</span>Created by {{comment.user.username}} on {{format_date date_created}}<span>~</span>
    </p>
    


</div>
{{/each}}


<script src="/js/comments.js"></script>
